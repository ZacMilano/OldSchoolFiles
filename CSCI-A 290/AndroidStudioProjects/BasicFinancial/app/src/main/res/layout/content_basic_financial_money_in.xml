<!-- This is the main, vertically-oriented linear layout that contains the content for this
     activity. -->
<LinearLayout
  android:id="@+id/lin_money_in_main"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="10dp"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:showIn="@layout/activity_basic_financial_money_in">
  
  <!-- This is the horizontal linear layout that contains the elements for where the user
       inputs their label for the transaction. -->
  <LinearLayout
    android:id="@+id/lin_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
  
    <!-- This is the text that indicates to enter a label next to it. -->
    <TextView
      android:id="@+id/txt_label"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight=".5"
      android:labelFor="@id/edit_label"
      android:text="@string/trans_label"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
  
    <!-- This is the field in which the user inputs their label for the transaction. -->
    <EditText
      android:id="@+id/edit_label"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight=".5"
      android:inputType="text" />

  </LinearLayout>
  
  <!-- This is the horizontal linear layout that contains the elements for where the user
       inputs their amount for the transaction. -->
  <LinearLayout
    android:id="@+id/lin_amount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
  
    <!-- This is the text that indicates to enter a number in edit_amount. -->
    <TextView
      android:id="@+id/txt_amount"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight=".45"
      android:text="@string/trans_amount"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    
    <!-- This is the text for the currency. -->
    <TextView
      android:id="@+id/txt_dollar_sign"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight=".05"
      android:labelFor="@id/edit_amount"
      android:text="@string/dollar_sign"
      android:textAlignment="viewEnd"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    
    <!-- This is where the user inputs the number amount for the transaction. -->
    <EditText
      android:id="@+id/edit_amount"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight=".5"
      android:inputType="numberDecimal" />

  </LinearLayout>
  
  <!-- This is the horizontal linear layout that contains the elements for where the user
       inputs their tag for the transaction. -->
  <LinearLayout
    android:id="@+id/lin_tag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
  
    <!-- This is the text that indicates to enter a number in edit_tag. -->
    <TextView
      android:id="@+id/txt_tag"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight=".5"
      android:labelFor="@id/edit_tag"
      android:text="@string/trans_tag"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
  
    <!-- This is where the user inputs the tag for the transaction. -->
    <EditText
      android:id="@+id/edit_tag"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight=".5"
      android:inputType="text" />
  
  </LinearLayout>
  
  <!-- This is a checkbox that asks if this transaction is a paycheck. If yes, it sets the
       transaction's "special" field to "paycheck." -->
  <CheckBox
    android:id="@+id/chk_paycheck"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/is_paycheck" />
  
  <!-- This is the button that, when pressed, adds a transaction to the week's array list with
       data from the EditText views above. -->
  <Button
    android:id="@+id/btn_add_money_in"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:text="@string/add_transaction"
    android:background="@color/colorPrimary"
    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"/>

</LinearLayout>
